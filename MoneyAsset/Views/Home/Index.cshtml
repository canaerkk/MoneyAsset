@model AccountBook
@{
    ViewBag.Title = "Home Page";
}
<div class="well">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="category" class="col-sm-2 control-label">類別</label>
            <div class="col-sm-10">
                <select id="category" class="form-control">
                    <option value="" selected>請選擇</option>
                    <option>支出</option>
                    <option>收入</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            
            <label for="money" class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Amounttt)</label>
            <div class="col-sm-10">
                @Html.EditorFor(model=>model.Amounttt, "TextBox")
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="col-sm-2 control-label">@Html.DisplayNameFor(model=>model.Dateee)</label>
            <div class="col-sm-10">
                @Html.EditorFor(model=>model.Dateee, "TextBox")
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">@Html.DisplayNameFor(model=>model.Remarkkk)</label>
            <div class="col-sm-10">
                @Html.EditorFor(model=>model.Remarkkk, "TextArea")
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    </form>
</div>
@Html.Action("Details")